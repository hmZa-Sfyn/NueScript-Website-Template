---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import EasterEgg from '../components/EasterEgg.astro';
import '@fontsource/jetbrains-mono';
import '@fontsource/fira-code';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="NueScript - The Future of Programming" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} | NueScript</title>
  </head>
  <body class="bg-nue-dark text-nue-light font-mono min-h-screen flex flex-col">
    <EasterEgg />
    <Header />
    <main class="flex-grow">
      <slot />
    </main>
    <Footer />
  </body>
</html>

<style is:global>
  :root {
    --gradient-animation: linear-gradient(45deg, 
      rgb(45, 59, 85) 0%,
      rgb(52, 211, 153) 50%,
      rgb(96, 165, 250) 100%
    );
  }

  ::selection {
    background: rgb(52, 211, 153, 0.2);
    color: #fff;
  }

  .gradient-text {
    background: var(--gradient-animation);
    background-size: 200% auto;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    animation: gradient 8s linear infinite;
  }
</style>