---
const code = `// Hello World in NueScript
fn main() -> void {
  let message = "Hello, World!"
  print(message)
}

// Type-safe functions
fn add(a: number, b: number) -> number {
  return a + b
}

// Pattern matching
match value {
  | Some(x) => print(x)
  | None => print("No value")
}`;
---

<div class="text-center mb-20">
  <h2 class="text-4xl font-bold mb-6 gradient-text">Code Example</h2>
  <pre class="bg-nue-primary/10 p-6 rounded-lg text-left overflow-x-auto">
    <code class="text-nue-light">{code}</code>
  </pre>
</div>