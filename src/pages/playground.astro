---
import Layout from '../layouts/Layout.astro';
import GradientText from '../components/GradientText.astro';
import CodeBlock from '../components/CodeBlock.astro';

const defaultCode = `fn main() -> void {
  // Try editing this code!
  let message = "Hello, NueScript!"
  print(message)
}`;
---

<Layout title="Playground">
  <div class="container mx-auto px-4 py-12">
    <GradientText as="h1" class="text-4xl font-bold mb-8 text-center">
      NueScript Playground
    </GradientText>
    
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
      <div class="space-y-4">
        <div class="bg-nue-primary/10 rounded-lg p-4">
          <textarea
            id="editor"
            class="w-full h-[400px] bg-transparent text-nue-light font-mono focus:outline-none resize-none"
          >{defaultCode}</textarea>
        </div>
        <button
          id="run-button"
          class="w-full py-3 bg-nue-secondary text-nue-dark rounded-lg hover:bg-nue-secondary/90 transition-colors"
        >
          Run Code
        </button>
      </div>
      
      <div class="space-y-4">
        <div class="bg-nue-primary/10 rounded-lg p-4 h-[400px] overflow-auto">
          <pre id="output" class="text-nue-light font-mono">// Output will appear here...</pre>
        </div>
        <button
          id="clear-button"
          class="w-full py-3 border border-nue-secondary text-nue-secondary rounded-lg hover:bg-nue-secondary/10 transition-colors"
        >
          Clear Output
        </button>
      </div>
    </div>
  </div>
</Layout>

<script>
  const editor = document.getElementById('editor') as HTMLTextAreaElement;
  const output = document.getElementById('output') as HTMLPreElement;
  const runButton = document.getElementById('run-button');
  const clearButton = document.getElementById('clear-button');

  runButton?.addEventListener('click', () => {
    const code = editor.value;
    // Simulate code execution
    output.textContent = `Running NueScript code...\n\n> ${code.split('\n')[1]}\nHello, NueScript!\n`;
  });

  clearButton?.addEventListener('click', () => {
    output.textContent = '// Output will appear here...';
  });
</script>